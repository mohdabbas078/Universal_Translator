<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#EFF3F2" />
            <gradient android:angle="-90" android:startColor="#FBFDFD" android:endColor="#ECEFEF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F9FBFB" />
            <solid android:color="#F0F6F5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F7FAF9" />
            <gradient android:angle="-90" android:startColor="#F4F8F7"
                android:endColor="#FEFFFF" />
        </shape>
    </item>
</selector>