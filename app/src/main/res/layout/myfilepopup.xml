<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File Name: File.txt"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt1"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#C1BEBE"
                    android:layout_below="@id/txt1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extracted Source Text"
                    android:id="@+id/txt3"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:layout_below="@+id/view1"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#C1BEBE"
                    android:layout_below="@id/txt3"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/v1"
                    android:layout_below="@id/view2"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/rl1"
                   >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:scrollbars="vertical"
                        android:textColor="#1DCF25"
                        android:textIsSelectable="true"
                        android:textStyle="italic"
                        android:id="@+id/resulttext"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                </ScrollView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/txt4"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/v1"/>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C1BEBE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/txt4"
                    />
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/view3"
                    android:entries="@array/toItem"
                    android:id="@+id/to"/>
                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C1BEBE"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/to"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view5"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/tranbtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#1DCF25"
                    android:text=""
                    android:scrollbars="vertical"
                    android:textIsSelectable="true"
                    android:id="@+id/convertedresulttext"
                    android:layout_below="@id/tranbtn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/download"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/convertedresulttext"
                        app:lottie_rawRes="@raw/download"
                        app:lottie_loop="true"
                        android:visibility="gone"
                        app:lottie_autoPlay="true" />

            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>